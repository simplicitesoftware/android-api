<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="simplicite_logo">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/logo</item>
	</style>
	
    <style name="simplicite_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/simplicite_head_bg</item>
        <item name="android:textColor">@color/simplicite_head_text</item>
        <item name="android:textSize">11pt</item>
        <item name="android:padding">3pt</item>
        <item name="android:layout_marginBottom">3pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="simplicite_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/simplicite_title_bg</item>
        <item name="android:textColor">@color/simplicite_title_text</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_marginBottom">3pt</item>
	</style>

    <style name="simplicite_subtitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/simplicite_title_bg</item>
        <item name="android:textColor">@color/simplicite_title_text</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_marginBottom">2pt</item>
	</style>

    <style name="simplicite_help">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/simplicite_help_bg</item>
        <item name="android:textColor">@color/simplicite_help_text</item>
        <item name="android:textSize">6pt</item>
        <item name="android:padding">2pt</item>
        <item name="android:layout_marginBottom">3pt</item>
        <item name="android:maxLines">3</item>
        </style>

    <style name="simplicite_small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">5pt</item>
	</style>

    <style name="simplicite_normal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>

    <style name="simplicite_fieldnormal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>

    <style name="simplicite_fieldreq">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/simplicite_fieldreq</item>
        <item name="android:textStyle">bold</item>
	</style>

    <style name="simplicite_fieldref">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/simplicite_fieldref</item>
        <item name="android:textStyle">italic</item>
	</style>

    <style name="simplicite_spinnerrow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">2pt</item>
	</style>

    <style name="listrow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2pt</item>
	</style>
	
</resources>